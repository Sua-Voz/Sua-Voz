@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Excluir Conta";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>Excluir Conta</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>A exclusão desses dados removerá permanentemente sua conta, e isso não pode ser recuperado.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password">Digite sua senha</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Excluir dados pessoais e fechar minha Conta</button>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}