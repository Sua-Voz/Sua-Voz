@{
    Layout = "/Views/Shared/crud.cshtml";
}

<div class="container loginCadastro__container ">
    @* <div class=""> *@
    <div class="card login-logout-tab loginCadastro__card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" href='/Identity/Account/Login'>Entrar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href='/Identity/Account/Register'>Criar Conta</a>
                </li>
            </ul>
        </div>
        <div class="card-content">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>
    @* </div> *@
</div>

@section Scripts{
@RenderSection("Scripts", required: false)
<script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        })
    })
</script>
}