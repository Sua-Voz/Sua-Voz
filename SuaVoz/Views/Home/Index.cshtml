<!--==================== FORM CONTACT ====================-->
<section class="contact">
	<form class="form" action="https://formspree.io/f/xrgjgyed" method="POST">
		<div class="form_container">
			<h2 class="form_title title-light">Seja Nosso Parceiro</h2>
			<input type="text" class="form_input" placeholder="Nome" name="name" />
			<input type="email" class="form_input" placeholder="Email" name="email" />
			<textarea class="form_input form_input-message" placeholder="Escreva seu messagem" name="message"></textarea>
			<button type="submit" class="hvr-bounce-to-top">Enviar</button>
		</div>
	</form>
</section>
